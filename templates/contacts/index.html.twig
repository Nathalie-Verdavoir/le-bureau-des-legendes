{% extends 'welcome.html.twig' %}

{% block title %}Contacts index{% endblock %}

{% block main %}
    <h1>Contacts index</h1>
    
    <table class="table">
        <thead>
            <tr>
                <th>Nom</th>
                <th>Pr√©nom</th>
                <th>Date de naissance</th>
                <th>Voir/Modifier</th>
            </tr>
        </thead>
        <tbody>
        {% for contact in contacts %}
            <tr>
                <td>{{ contact.nom }}</td>
                <td>{{ contact.prenom }}</td>
                <td>{{ contact.dateDeNaissance ? contact.dateDeNaissance|date('Y-m-d') : '' }}</td>
                <td>
                    <a type="button" class="btn" href="{{ path('contacts_show', {'id': contact.id}) }}">Voir</a>
                    <a type="button" class="btn" href="{{ path('contacts_edit', {'id': contact.id}) }}">Modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
 {% if pageCount  is defined and pageCount  > 1 %}
        {% for i in 1..pageCount %}
            <a type="button" class="btn paging" href="/contacts/list/{{ i }}">{{ i }}</a>
         {% endfor %}
         {% endif %}
         <br>
    <a type="button" class="btn" href="{{ path('contacts_new') }}">Ajouter </a>
{% endblock %}
