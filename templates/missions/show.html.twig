{% extends 'welcome.html.twig' %}

{% block title %}Missions{% endblock %}

{% block main %}
    <h1>Missions</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ mission.id }}</td>
            </tr>
            <tr>
                <th>Titre</th>
                <td>{{ mission.titre }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ mission.description }}</td>
            </tr>
            <tr>
                <th>Date_debut</th>
                <td>{{ mission.dateDebut ? mission.dateDebut|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Date_fin</th>
                <td>{{ mission.dateFin ? mission.dateFin|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Planques</th>
                <td> 
                    {% for planques in mission.planques %}
                        {{ planques.code }}
                    {% endfor %}
                </td>
            </tr>
            <tr>
                <th>Spécialité nécessaire</th>
                <td>{{ mission.specialite }}</td>
            </tr>
            <tr>
                <th>Pays</th>
                <td>{{ mission.pays }}</td>
            </tr>
            <tr>
                <th>Agents</th>
                <td> 
                    {% for agents in mission.agents %}
                        {{ agents.nom }}
                    {% endfor %}
                </td>
            </tr>
        </tbody>
    </table>

    <a type="button" class="btn" href="{{ path('missions_index', {'page': 1})  }}">Retour</a>

    <a type="button" class="btn" href="{{ path('missions_edit', {'id': mission.id}) }}">Modifier</a>

    {{ include('missions/_delete_form.html.twig') }}
{% endblock %}
