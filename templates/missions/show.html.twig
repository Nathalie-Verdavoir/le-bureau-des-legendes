{% extends 'welcome.html.twig' %}

{% block title %}Missions{% endblock %}

{% block main %}
    <h1>Missions</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ mission.id|e }}</td>
            </tr>
            <tr>
                <th>Titre</th>
                <td>{{ mission.titre|e }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ mission.description|e }}</td>
            </tr>
            <tr>
                <th>Date_debut</th>
                <td>{{ mission.dateDebut|e ? mission.dateDebut|e|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Date_fin</th>
                <td>{{ mission.dateFin|e ? mission.dateFin|e|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Planques</th>
                <td> 
                    {% for planques in mission.planques %}
                        {{ planques.code|e }}
                    {% endfor %}
                </td>
            </tr>
            <tr>
                <th>Spécialité nécessaire</th>
                <td>{{ mission.specialite|e }}</td>
            </tr>
            <tr>
                <th>Pays</th>
                <td>{{ mission.pays|e }}</td>
            </tr>
            <tr>
                <th>Agents</th>
                <td> 
                    {% for agents in mission.agents %}
                        {{ agents.nom|e }}
                    {% endfor %}
                </td>
            </tr>
        </tbody>
    </table>

    <a type="button" class="btn" href="{{ path('missions_index', {'page': 1})  }}">Retour</a>
{% if app.user %}
        {% if "ROLE_ADMIN" in app.user.roles %}
    <a type="button" class="btn" href="{{ path('missions_edit', {'id': mission.id}) }}">edit</a>

    {{ include('missions/_delete_form.html.twig') }}
     {% endif %} {% endif %}
{% endblock %}
