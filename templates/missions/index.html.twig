{% extends 'welcome.html.twig' %}

{% block title %}Missions index{% endblock %}

{% block main %}
    <h1>Missions index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Titre</th>
                <th>Nom de code</th>
                <th>Description</th>
                <th>Date_debut</th>
                <th>Date_fin</th>
                <th>Pays</th>
                <th>Specialité requise</th>
                <th>Agents affectés</th>
                {% if app.user %}
                <th>Voir/Modifier</th>
                {% else %}
                 <th>Voir</th>
                {% endif %}
            </tr>
        </thead>
        <tbody>
        {% for mission in missions %}
            <tr>
                <td>{{ mission.titre|e }}</td>
                <td>{{ mission.nomdecode|e }}</td>
                <td>{{ mission.description|e }}</td>
                <td>{{ mission.dateDebut ? mission.dateDebut|e|date('Y-m-d') : '' }}</td>
                <td>{{ mission.dateFin ? mission.dateFin|e|date('Y-m-d') : '' }}</td>
                 <td>{{ mission.pays|e }}</td>
                 <td>{{ mission.specialite|e }}</td>
                 <td> {% for agent in mission.getAgents %}-{{agent|spaceless|e }}<br>{% endfor %}</td>
                <td>
                    <a type="button" class="btn" href="{{ path('missions_show', {'id': mission.id}) }}">show</a>
                     {% if app.user %} {% if "ROLE_ADMIN" in app.user.roles %}
                    <a type="button" class="btn" href="{{ path('missions_edit', {'id': mission.id}) }}">edit</a>
                     {% endif %}{% endif %}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
 {% if pageCount  is defined and pageCount  > 1 %}
        {% for i in 1..pageCount %}
            <a type="button" class="btn paging" href="/missions/list/{{ i }}">{{ i }}</a>
         {% endfor %}
         {% endif %}
         <br>
{% if app.user %}
        {% if "ROLE_ADMIN" in app.user.roles %}
    <a type="button" class="btn" href="{{ path('missions_new') }}">Ajouter </a>
 {% endif %} {% endif %}
{% endblock %}
