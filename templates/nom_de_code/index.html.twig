{% extends 'welcome.html.twig' %}

{% block title %}Nom De Code index{% endblock %}

{% block main %}
    <h1>NomDeCode index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Code</th>
                <th>Voir/Modifier</th>
            </tr>
        </thead>
        <tbody>
        {% for nom_de_code in nom_de_codes %}
            <tr>
                <td>{{ nom_de_code.code }}</td>
                <td>
                    <a type="button" class="btn" href="{{ path('nom_de_code_show', {'id': nom_de_code.id}) }}">Voir</a>
                    <a type="button" class="btn" href="{{ path('nom_de_code_edit', {'id': nom_de_code.id}) }}">Modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
 {% if pageCount  is defined and pageCount  > 1 %}
        {% for i in 1..pageCount %}
            <a type="button" class="btn paging" href="/nom_de_code/list/{{ i }}">{{ i }}</a>
         {% endfor %}
         {% endif %}
         <br>
    <a type="button" class="btn" href="{{ path('nom_de_code_new') }}">Ajouter </a>
{% endblock %}
