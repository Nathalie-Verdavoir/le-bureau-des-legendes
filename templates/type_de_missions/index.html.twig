{% extends 'welcome.html.twig' %}

{% block title %}TypeDeMissions index{% endblock %}

{% block main %}
    <h1>TypeDeMissions index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Nom</th>
                <th>Voir/Modifier</th>
            </tr>
        </thead>
        <tbody>
        {% for type_de_mission in type_de_missions %}
            <tr>
                <td>{{ type_de_mission.nom }}</td>
                <td>
                    <a type="button" class="btn" href="{{ path('type_de_missions_show', {'id': type_de_mission.id}) }}">Voir</a>
                    <a type="button" class="btn" href="{{ path('type_de_missions_edit', {'id': type_de_mission.id}) }}">Modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% if pageCount  is defined and pageCount  > 1 %}
        {% for i in 1..pageCount %}
            <a type="button" class="btn paging" href="/type_de_missions/list/{{ i }}">{{ i }}</a>
         {% endfor %}
         {% endif %}
         <br>
    <a type="button" class="btn" href="{{ path('type_de_missions_new') }}">Ajouter </a>
{% endblock %}
