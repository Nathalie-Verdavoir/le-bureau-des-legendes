{% extends 'base.html.twig' %}

{% block title %}Status index{% endblock %}

{% block body %}
    <h1>Status index</h1><a type="button" class="btn btn-primary" href="/">Accueil</a>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Etat</th>
                <th>Voir/Modifier</th>
            </tr>
        </thead>
        <tbody>
        {% for status in statuses %}
            <tr>
                <td>{{ status.id }}</td>
                <td>{{ status.etat }}</td>
                <td>
                    <a type="button" class="btn btn-primary" href="{{ path('status_show', {'id': status.id}) }}">show</a>
                    <a type="button" class="btn btn-primary" href="{{ path('status_edit', {'id': status.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a type="button" class="btn btn-primary" href="{{ path('status_new') }}">Create new</a>
{% endblock %}
