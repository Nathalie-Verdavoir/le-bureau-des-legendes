{% extends 'base.html.twig' %}

{% block title %}Pays index{% endblock %}

{% block body %}
    <h1>Pays index</h1><a type="button" class="btn btn-primary" href="/">Accueil</a>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Code</th>
                <th>Nom</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for pay in pays %}
            <tr>
                <td>{{ pay.id }}</td>
                <td>{{ pay.code }}</td>
                <td>{{ pay.nom }}</td>
                <td>
                    <a type="button" class="btn btn-primary" href="{{ path('pays_show', {'id': pay.id}) }}">show</a>
                    <a type="button" class="btn btn-primary" href="{{ path('pays_edit', {'id': pay.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a type="button" class="btn btn-primary" href="{{ path('pays_new') }}">Create new</a>
{% endblock %}
