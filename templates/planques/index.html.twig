{% extends 'base.html.twig' %}

{% block title %}Planques index{% endblock %}

{% block body %}
    <h1>Planques index</h1><a type="button" class="btn btn-primary" href="/">Accueil</a>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Adresse</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for planque in planques %}
            <tr>
                <td>{{ planque.id }}</td>
                <td>{{ planque.adresse }}</td>
                <td>
                    <a type="button" class="btn btn-primary" href="{{ path('planques_show', {'id': planque.id}) }}">show</a>
                    <a type="button" class="btn btn-primary" href="{{ path('planques_edit', {'id': planque.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a type="button" class="btn btn-primary" href="{{ path('planques_new') }}">Create new</a>
{% endblock %}
